{
  "name": {
    "en": "Stopwatch",
    "nl": "Stopwatch"
  },
  "description": {
    "en": "Stopwatch with lap timing",
    "nl": "Stopwatch met rondetijden"
  },
  "height": 200,
  "transparent": false,
  "settings": [
    {
      "id": "allowAddingStopwatches",
      "type": "checkbox",
      "label": {
        "en": "Allow adding stopwatches",
        "nl": "Stopwatches toevoegen toestaan"
      },
      "value": true
    },
    {
      "id": "maxStopwatches",
      "type": "number",
      "label": {
        "en": "Maximum stopwatches",
        "nl": "Maximaal aantal stopwatches"
      },
      "hint": {
        "en": "Maximum number of stopwatches that can run simultaneously (1-5)",
        "nl": "Maximaal aantal stopwatches dat tegelijk kan draaien (1-5)"
      },
      "min": 1,
      "max": 10,
      "value": 3
    },
    {
      "id": "initialStopwatches",
      "type": "number",
      "label": {
        "en": "Number of stopwatches to start with",
        "nl": "Aantal stopwatches bij starten"
      },
      "hint": {
        "en": "How many stopwatches to show when the widget first loads",
        "nl": "Hoeveel stopwatches worden getoond wanneer de widget wordt geladen"
      },
      "min": 1,
      "max": 5,
      "value": 1
    },
    {
      "id": "showLaps",
      "type": "checkbox",
      "label": {
        "en": "Show lap times",
        "nl": "Toon rondetijden"
      },
      "value": false
    },
    {
      "id": "showMilliseconds",
      "type": "checkbox",
      "label": {
        "en": "Show milliseconds",
        "nl": "Toon milliseconden"
      },
      "value": true
    }
  ]
}