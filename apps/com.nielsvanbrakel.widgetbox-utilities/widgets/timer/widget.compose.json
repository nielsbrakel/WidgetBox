{
  "name": {
    "en": "Timer",
    "nl": "Timer"
  },
  "description": {
    "en": "Countdown timer with multiple support",
    "nl": "Afteltimer met ondersteuning voor meerdere timers"
  },
  "height": 200,
  "transparent": true,
  "settings": [
    {
      "id": "allowAddingTimers",
      "type": "checkbox",
      "label": {
        "en": "Allow adding new timers",
        "nl": "Nieuwe timers toevoegen toestaan"
      },
      "value": true
    },
    {
      "id": "defaultHours",
      "type": "number",
      "label": {
        "en": "Default timer hours",
        "nl": "Standaard timer uren"
      },
      "hint": {
        "en": "Hours for new timers (0-23)",
        "nl": "Uren voor nieuwe timers (0-23)"
      },
      "min": 0,
      "max": 23,
      "value": 0
    },
    {
      "id": "defaultMinutes",
      "type": "number",
      "label": {
        "en": "Default timer minutes",
        "nl": "Standaard timer minuten"
      },
      "hint": {
        "en": "Minutes for new timers (0-59)",
        "nl": "Minuten voor nieuwe timers (0-59)"
      },
      "min": 0,
      "max": 59,
      "value": 5
    },
    {
      "id": "defaultSeconds",
      "type": "number",
      "label": {
        "en": "Default timer seconds",
        "nl": "Standaard timer seconden"
      },
      "hint": {
        "en": "Seconds for new timers (0-59)",
        "nl": "Seconden voor nieuwe timers (0-59)"
      },
      "min": 0,
      "max": 59,
      "value": 0
    },
    {
      "id": "initialTimers",
      "type": "number",
      "label": {
        "en": "Number of timers to start with",
        "nl": "Aantal timers bij starten"
      },
      "hint": {
        "en": "How many timers to show when the widget first loads",
        "nl": "Hoeveel timers worden getoond wanneer de widget wordt geladen"
      },
      "min": 1,
      "max": 10,
      "value": 1
    },
    {
      "id": "maxTimers",
      "type": "number",
      "label": {
        "en": "Maximum number of timers",
        "nl": "Maximaal aantal timers"
      },
      "hint": {
        "en": "Maximum number of timers that can be active at once (1-10)",
        "nl": "Maximaal aantal timers dat tegelijk actief kan zijn (1-10)"
      },
      "min": 1,
      "max": 10,
      "value": 5
    }
  ]
}